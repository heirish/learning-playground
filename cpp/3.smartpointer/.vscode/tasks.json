{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "GCC Build",
			"command": "C:\\Users\\na\\dev-env\\mingw\\mingw64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-std=c++20",
				"${workspaceFolder}\\*.cpp",
				"-o",
				"${workspaceFolder}\\main.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: C:\\Users\\na\\dev-env\\mingw\\mingw64\\bin\\g++.exe"
		},
		{
			"type": "cppbuild",
			"label": "Clang Build",
			"command": "C:\\Users\\na\\dev-env\\mingw\\mingw64\\bin\\clang++.exe",
			"args": [
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-g",
				"${workspaceFolder}\\*.cpp",
				"-o",
				"${workspaceFolder}\\main.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\Users\\na\\dev-env\\mingw\\mingw64\\bin\\clang++.exe"
		},
		{
			"type": "cppbuild",
			"label": "MSVC Build",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/std:c++latest",
				"/EHsc",
				"/nologo",
				"${workspaceFolder}\\*.cpp",
				"/Fe${workspaceFolder}\\main.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "compiler: cl.exe"
		}
	]
}